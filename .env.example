# API Keys
# Get your Congress.gov API key from: https://api.congress.gov/sign-up/
CONGRESS_API_KEY=your_congress_api_key_here

# Get your FEC API key from: https://api.open.fec.gov/developers/
FEC_API_KEY=your_fec_api_key_here

# Census API (optional for now)
# Get your Census API key from: https://api.census.gov/data/key_signup.html
CENSUS_API_KEY=your_census_api_key_here

# OpenStates API (for future use)
# Get your API key from: https://openstates.org/api/register/
OPENSTATES_API_KEY=your_openstates_api_key_here

# GDELT API (no key required, but we track it)
GDELT_API_URL=https://api.gdeltproject.org/api/v2/

# AI Services (Phase 6)
# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Application Settings
NODE_ENV=development
PORT=3000

# Cache Settings
CACHE_TTL=3600  # Cache TTL in seconds (1 hour)
ENABLE_CACHE=true

# Rate Limiting
RATE_LIMIT_WINDOW=60000  # Window in milliseconds (1 minute)
RATE_LIMIT_MAX_REQUESTS=100  # Max requests per window

# Feature Flags
ENABLE_STATE_REPS=false  # State representatives (Phase 2)
ENABLE_LOCAL_REPS=false  # Local representatives (Phase 3)
ENABLE_MAPS=false        # District maps (Phase 2)
ENABLE_NEWS=false        # News integration (Phase 2)

# Logging
LOG_LEVEL=info  # debug, info, warn, error

# Analytics (optional)
# GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# PLAUSIBLE_DOMAIN=civiq.org

# Error Tracking (optional)
# SENTRY_DSN=your_sentry_dsn_here

# Database (for future use)
# DATABASE_URL=postgresql://user:password@localhost:5432/civiq
# REDIS_URL=redis://localhost:6379

# External Services (future)
# SENDGRID_API_KEY=your_sendgrid_key_here
# MAPBOX_ACCESS_TOKEN=your_mapbox_token_here
