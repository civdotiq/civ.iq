{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(npm run dev:*)",
      "Bash(curl:*)",
      "Bash(wc:*)",
      "Bash(npx prettier:*)",
      "Bash(time curl:*)",
      "Bash(python3:*)",
      "Bash(npm install:*)",
      "Bash(echo:*)",
      "WebSearch",
      "Bash(sqlite3:*)",
      "Bash(node:*)",
      "Bash(apt list:*)",
      "Bash(npm run type-check:*)",
      "Bash(npx tsc:*)",
      "Bash(npm uninstall:*)",
      "Bash(npx tsx:*)",
      "Bash(npx vitest run:*)",
      "Bash(npm test:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(npm audit:*)",
      "Bash(git reset:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node .claude/hooks/react-app/quality-check.js"
          }
        ]
      }
    ]
  }
}
